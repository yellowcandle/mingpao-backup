  },
  "daily_limit": 2000,
  "use_newspaper": false,
  "use_newspaper4k_titles": false,
  "use_index_page": true,
  "parallel": {
    "enabled": false,
    "max_workers": 2,
    "rate_limit_delay": 3.0
  },
  "keywords": {
    "enabled": false,
    "terms": [],
    "case_sensitive": false,
    "language": "zh-TW",
    "script": "traditional",
    "normalization": "NFC",
    "logic": "or",
    "search_content": false,
    "parallel_workers": 2,
    "wayback_first": true
  }
}

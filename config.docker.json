{
  "database": {
    "path": "/data/hkga_archive.db"
  },
  "logging": {
    "level": "INFO",
    "file": "/logs/hkga_archiver.log"
  },
  "archiving": {
    "rate_limit_delay": 3,
    "verify_first": true,
    "timeout": 30,
    "max_retries": 3,

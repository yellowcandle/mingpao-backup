{
  "database": {
    "path": "hkga_archive.db"
  },
  "logging": {
    "level": "INFO",
    "file": "logs/hkga_archiver.log"
  },
  "archiving": {
    "rate_limit_delay": 5,
    "verify_first": true,
    "timeout": 60,
    "max_retries": 5,
    "retry_delay": 15
  },
  "daily_limit": 2000,
  "date_range": {
    "start": "2025-01-01",
    "end": "2025-01-31"
  },
  "use_newspaper": false,
  "use_newspaper4k_titles": false,
  "use_index_page": true,
  "parallel": {
    "enabled": true,
    "max_workers": 1,
    "rate_limit_delay": 5.0
  },
  "keywords": {
    "enabled": false,
    "terms": [
      "香港",
      "政治",
      "中國",
      "台灣",
      "國安法",
      "選舉",
      "示威",
      "黎智英"
    ],
    "case_sensitive": false,
    "language": "zh-TW",
    "script": "traditional",
    "normalization": "NFC",
    "logic": "or",
    "search_content": false,
    "parallel_workers": 2,
    "wayback_first": true
  }
}
